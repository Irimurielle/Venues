<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="Kigali Serena Hotel"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="10dp"
                android:id="@+id/imagestar"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/star"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/imagestar"
                android:src="@drawable/ic_baseline_star_24" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:text="1.5k reviews"
                android:textColor="@color/green"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView16"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="Amenities"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/chair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_baseline_chair_24" />

            <TextView
                android:id="@+id/namechair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chair"
                android:layout_marginStart="42dp"
                android:text="Chair"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/chair"
                android:src="@drawable/ic_baseline_note_24" />

            <TextView
                android:id="@+id/notetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/note"
                android:layout_marginStart="9dp"
                android:layout_toRightOf="@id/namechair"
                android:text="Notebook"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1.5dp"
                android:layout_toRightOf="@id/note"
                android:src="@drawable/ic_baseline_wifi_24" />

            <TextView
                android:id="@+id/wifitext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wifi"
                android:layout_marginStart="18dp"
                android:layout_toRightOf="@id/notetext"
                android:text="Wifi"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/wheelchair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/wifi"
                android:src="@drawable/ic_baseline_wheelchair_pickup_24" />

            <TextView
                android:id="@+id/wheelchairtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wheelchair"
                android:layout_marginStart="9dp"
                android:layout_toRightOf="@id/wifitext"
                android:text="Wheelchair"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/wheelchair"
                android:src="@drawable/ic_baseline_coffee_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffee"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/wheelchairtext"
                android:text="Coffee"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namechair"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="About"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name2"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:text="Located in Kigali, 300 meters from Camp Kigali Memorial, Kigali Serena Hotel offers a restaurant, free private parking, an outdoor swimming pool and a fitness center......"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView18"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="Read more"
                android:textColor="@color/green"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView17"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="Occupancy"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name3"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Space setup option"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:text="Conference"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:text="Classroom"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:text="Cocktail"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:text="U-shape"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="No Guests"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:text="200"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:text="360"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:text="500"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:text="40"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout5"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="Photo"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <GridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name4"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:numColumns="4" />

            <TextView
                android:id="@+id/name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="Location"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/name5"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/name6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/map"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Cancellation Policy"
                android:drawablePadding="236dp"
                android:textColor="@color/grey"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/name7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name6"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Operating Hours"
                android:drawablePadding="236dp"
                android:textColor="@color/grey"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/close"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:layout_below="@+id/name7"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/close"
                android:src="@drawable/ic_baseline_close_24" />

            <Button
                android:id="@+id/button"
                android:layout_width="129dp"
                android:layout_height="42dp"
                android:layout_below="@+id/name7"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/button"
                android:text="Book now"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>