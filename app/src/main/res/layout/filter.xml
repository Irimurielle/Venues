<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="530dp"
    android:layout_gravity="center"
    android:padding="20dp">

    <TextView
        android:id="@+id/text1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Attendees"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/listview1"
        android:layout_width="181dp"
        android:layout_height="187dp"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textShow1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:text="Show All"
        android:textColor="@color/green"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textShow1"
        android:layout_alignParentLeft="true"
        android:text="Amenities"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/listview2"
        android:layout_width="181dp"
        android:layout_height="187dp"
        android:layout_below="@+id/text2"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/textShow2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:text="Show All"
        android:textColor="@color/green"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:text="Space Type"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/listview3"
        android:layout_width="181dp"
        android:layout_height="187dp"
        android:layout_below="@+id/text3"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textShow3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:text="Show All"
        android:textColor="@color/green"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textShow3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:text="Interior Spaces"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/listview4"
        android:layout_width="181dp"
        android:layout_height="187dp"
        android:layout_below="@+id/text4"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textShow4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:text="Show All"
        android:textColor="@color/green"
        android:textSize="14sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textShow2"
        android:background="@color/green"
        android:text="Apply"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:layout_centerInParent="true"/>

</RelativeLayout>