<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BookingActivity"
    android:background="@color/green">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_arrow_back_ios" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="Kigali Serena Hotel"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/name"
        android:layout_marginTop="6dp"
        android:background="@drawable/dashboard"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Complete your reservation"
            android:textColor="@color/green"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name1"
            android:layout_marginStart="4dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="16dp"
                    android:layout_gravity="left"
                    android:text="Arrival Date"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="5dp"
                    android:drawableEnd="@drawable/ic_baseline_calendar"
                    android:inputType="date"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Arrival Time"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/time"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="5dp"
                    android:drawableEnd="@drawable/ic_baseline_timer"
                    android:inputType="time"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Telephone"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="5dp"
                    android:drawableEnd="@drawable/ic_baseline_phone"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="How many Guests are coming?"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/guests"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="16dp"
                    android:layout_gravity="left"
                    android:text="Departure Date"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/exitDate"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="5dp"
                    android:drawableEnd="@drawable/ic_baseline_calendar"
                    android:inputType="date"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Names"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/names"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Email"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="5dp"
                    android:drawableEnd="@drawable/ic_baseline_email_24"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Upload covid Test"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/tests"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/specials"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="32dp"
            android:text="Any Special Request"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/request"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_below="@+id/specials"
            android:layout_marginStart="42dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/editview"
            android:elevation="5dp"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/edit"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/button2"
            android:text="Submit"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>