            <androidx.cardview.widget.CardView
                android:id="@+id/hotel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:elevation="6dp"
                android:layout_gravity="fill"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/hall2" />

                <RelativeLayout
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:background="#C4C4C4AB">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Des Mille Colline"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:src="@drawable/ic_baseline_star_24" />

                    <ImageView
                        android:id="@id/imagestar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_toRightOf="@id/star"
                        android:src="@drawable/ic_baseline_star_24" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_toRightOf="@id/imagestar"
                        android:src="@drawable/ic_baseline_star_24" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/star"
                        android:text="Covid Testing Considering"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:text=" 2KN 6th Avenue PO Box "
                        android:textColor="@color/grey"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name2"
                        android:text="View Details"
                        android:textColor="@color/white"
                        android:textSize="10sp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

